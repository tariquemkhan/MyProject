<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.letstalk.login.EmailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivAppLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/etEmailField"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/ivAppLogo"
                android:layout_marginTop="55dp"
                android:background="@drawable/rect_edit_text"
                android:hint="@string/email_hint"
                android:padding="10dp" />

            <Button
                android:id="@+id/btnEmail"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/etEmailField"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_login_selector"
                android:text="@string/btn_start"
                android:textColor="@drawable/btn_text_color"
                android:textSize="20sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
