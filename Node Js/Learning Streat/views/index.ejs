<!DOCTYPE html>
<html>
	<head>
		<title>Learning Street</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<script src="/libs/jquery-3.2.0.min.js"></script>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">

		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

		<!-- Optional theme -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

		<!-- Latest compiled and minified JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

		<!-- Validator plugin -->
		<script type="text/javascript" src="/script/validator.min.js"></script>

    	<!-- project style -->
    	<link rel="stylesheet" type="text/css" href="/css/learning-street.css">

    	<!-- project javascripts file -->
    	<script type="text/javascript" src="/js/learning-street.js"></script>
	</head>
	<body>
		<div class="container-fluid">
			<div class="row header-wrapper hidden-xs">
				<div class="col-sm-5 col-xs-12 text-center">
					<h1 class="website-heading">Learning Street</h1>
				</div>
				<div class="col-sm-7 col-xs-12">
					<form class="form-inline pull-right" method="POST" action="/login">
					  <div class="form-group">
					    <label class="sr-only" for="exampleInputEmail3">Email address</label>
					    <input type="email" class="form-control input-sm" id="userEmail" placeholder="Email" name="email">
					  </div>
					  <div class="form-group">
					    <label class="sr-only" for="userPassword">Password</label>
					    <input type="password" class="form-control input-sm" id="userPassword" placeholder="Password" name="password">
					  </div>
					  <button type="submit" class="btn btn-primary btn-sm" id="btnLogin">Sign In</button>
					</form>
				</div>
			</div>
			<div class="row visible-xs">
				<div class="col-sm-6 col-xs-12 text-center header-xs">
					<h1 class="website-heading">Learning Street</h1>
				</div>
				<div class="col-sm-6 col-xs-12">
					<form class="form-inline">
					  <div class="form-group">
					    <label class="sr-only" for="userEmail">Email address</label>
					    <input type="email" class="form-control input-sm" id="userEmail" placeholder="Email">
					  </div>
					  <div class="form-group">
					    <label class="sr-only" for="userPassword">Password</label>
					    <input type="password" class="form-control input-sm" id="userPassword" placeholder="Password">
					  </div>
					  <button type="submit" class="btn btn-primary col-xs-12" id="btnLogin">Sign In</button>
					</form>
				</div>
			</div>
			<div class="row animation-container">
				<div class="col-sm-9">
					
				</div>
				<div class="col-sm-3 no-padding">
					<form class="text-center m-l-lg" id="identicalForm" data-toggle="validator" action="/signup" method="POST">
						<div class="form-group">
						    <input type="text" class="form-control" id="firstName" name = "firstName" placeholder="First Name" required>
						</div>
						<div class="form-group">
						    <input type="text" class="form-control" id="lastName" name = "lastName" placeholder="Last Name" required>
						</div>
						<div class="form-group">
						    <input type="email" class="form-control" id="email"  name = "email" placeholder="Email" required>
						</div>
						<div class="form-group">
						    <input type="password" class="form-control" id="password" name = "password" placeholder="Password" required>
						</div>
						<div class="form-group">
						    <input type="password" class="form-control" id="confirmPassword" placeholder="Re-Enter Password" data-match="#password" data-match-error="Password doesn't match">
						    <div class="help-block with-errors"></div>
						</div>
						<button type="submit" class="btn btn-primary col-sm-12">Sign Up</button>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>